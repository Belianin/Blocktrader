<Window x:Class="Blocktrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blocktrader"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"></RowDefinition>
            <RowDefinition Height="256"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label
            Content="Bids" Height="32"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Grid.Row="0" Grid.Column="0"/>
        <Label
            Content="Asks"
            Height="32"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Grid.Row="0" Grid.Column="1"/>
        <DataGrid 
            x:Name="BinanceBidsGrid"
            HorizontalAlignment="Left"
            Height="256"
            VerticalAlignment="Top"
            Width="380"
            ColumnWidth="*"
            Grid.Row="1" Grid.Column="0"
            IsReadOnly="True"/>
        <DataGrid 
            x:Name="BinanceAsksGrid"
            HorizontalAlignment="Right"
            Height="256"
            VerticalAlignment="Top"
            Width="380"
            ColumnWidth="*"
            Grid.Row="1" Grid.Column="1"
            IsReadOnly="True"/>
        <DataGrid 
            x:Name="BitfinexBidsGrid"
            HorizontalAlignment="Left"
            Height="256"
            VerticalAlignment="Top"
            Width="380"
            ColumnWidth="*"
            Grid.Row="2" Grid.Column="0"
            IsReadOnly="True"/>
        <DataGrid 
            x:Name="BitfinexAsksGrid"
            HorizontalAlignment="Right"
            Height="256"
            VerticalAlignment="Top"
            Width="380"
            ColumnWidth="*"
            Grid.Row="2" Grid.Column="1"
            IsReadOnly="True"/>
        <DataGrid 
            x:Name="BitstampBidsGrid"
            HorizontalAlignment="Left"
            Height="256"
            VerticalAlignment="Top"
            Width="380"
            ColumnWidth="*"
            Grid.Row="3" Grid.Column="0"
            IsReadOnly="True"/>
        <DataGrid 
            x:Name="BitstampAsksGrid"
            HorizontalAlignment="Right"
            Height="256"
            VerticalAlignment="Top"
            Width="380"
            ColumnWidth="*"
            Grid.Row="3" Grid.Column="1"
            IsReadOnly="True"/>
        <TextBox
            Height="16"
            Name="OrderSizeInput"
            Grid.Row="2" Grid.Column="0"/>
        <Button
            Height="16"
            Content="GO"
            Click="Filter"
            Grid.Row="3" Grid.Column="0"/>
    </Grid>
</Window>
